mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="img/sprite.svg#" + name)

mixin button(title,link,mod,icon)
	- mod = mod || 'regular'
	a(class="button button-" + mod, href=link) #{title} 
		if icon
			span.button__small-fa-icon
				i(class="fas " + icon)
//- img avatar-user
//-------------
mixin avatar-user(link)
	.avatar-user__circle-border
		img(src=link, alt="image")
//- header-menu
//-------------
mixin header-menu(navClass,menu)
	nav(Class=navClass)
		ul
			each link in menu    
				li
					a(href=link.href)=link.linkName
//- footer-menu
//-------------
mixin menu(menu)
	ul.menu
		each link in menu    
			li
				a(href=link.href)=link.linkName

//- footer-icon
//-------------
mixin footer-icons
	ul.footer-icons
		each item, index in ['vk','twitter','youtube-square', 'instagram', 'facebook-f']
			li
				a(href="#")
					i(class="fab fa-" +item)



mixin comment-info(avatar,user_name,date,text)
	.comment
		+avatar('small comment__avatar',avatar,user_name)
		.comment__info
			.comment__info__user_date
				.comment__user_name #{user_name}
				i.far.fa-clock
				.comment__date #{date}
			.comment__text #{text}
			


