mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="img/sprite.svg#" + name)

mixin button(title,link,mod,icon)
	- mod = mod || 'regular'
	a(class="button button-" + mod, href=link) #{title} 
		if icon
			span.button__small-fa-icon
				i(class="fas " + icon)

//- footer-menu
//-------------
mixin menu(menu)
	ul.menu
		each link in menu    
			li
				a(href=link.href)=link.linkName

//- footer-icon
//-------------
mixin footer-icons
	ul.footer-icons
		each item, index in ['vk','twitter','youtube-square', 'instagram', 'facebook-f']
			li
				a(href="#")
					i(class="fab fa-" +item)


//- help-elements
//---------------
mixin error(nameClass,title_message)
	div(class="error-message error-message__"+ nameClass)= title_message

mixin error_description(nameClassblock,nameClass,title_message)
	div(class="block-error__"+ nameClassblock)
		div(class="error-message error-message__"+ nameClass)= title_message
		div(class="description-error")
			if block
				block

mixin badge-element(title)
	.badge-element= title
			

