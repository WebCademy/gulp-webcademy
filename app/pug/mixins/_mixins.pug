mixin error(nameClass,title_message)
	div(class="error-message error-message__"+ nameClass)= title_message

mixin error_description(nameClassblock,nameClass,title_message)
	div(class="block-error block-error__"+ nameClassblock)
		div(class="error-message error-message__"+ nameClass)= title_message
		div(class="description-error")
			if block
				block

mixin badge-element(title)
	.badge-element= title

mixin avatar(modifName,img,altName)
	div(class="avatar avatar-" +modifName)
		img(src= img,alt= altName)

mixin checkbox(className,idName,name,forName)
	div(class=className)
		input(id=idName type="checkbox" name=name checked hidden)
		label(for=forName) Запомнить меня

			
//- Mixins for cards
//-------------

mixin card(img_src,card_title,link,button_title,mod)
	div(class="card card-" + mod)
		img(class="card__img card-" + mod +"__img", src= img_src)
		h2.card__title #{card_title}
		+button(button_title,link)

mixin card-post(img_src,card_title,link)
	+card(img_src,card_title,link,"Читать","post")

mixin card-portfolio(img_src,card_title,link)
	+card(img_src,card_title,link,"Смотреть кейс","portfolio")

